<h3 class="title"><%= l(:leave_feedback_title) %></h3>

<%= form_tag leave_feedbacks_send_path, :remote => true, :method => :post do %>
<p><small><%= l(:leave_feedback_help) %></small></p>
<%= wikitoolbar_for "leave_feedback" %>
<table align="center">
  <tr>
    <td>
      <%= text_area_tag 'leave_feedback', nil, rows: 5, cols: 60, resize: "none" %>
    </td>
  </tr>
</table>

  <p class="buttons">
    <%= submit_tag l(:leave_feedback_send), :name => nil, :onclick => "hideModal(this);" %>
    <%= submit_tag l(:button_cancel), :name => nil, :onclick => "hideModal(this);", :type => 'button' %>
  </p>
<% end %>

