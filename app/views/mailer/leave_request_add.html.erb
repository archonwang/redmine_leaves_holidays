<!DOCTYPE html>
<h1><%= link_to "Leave Request \##{@leave.id}", @leave %> was submitted by <%= link_to @user.name, @user %> for approval:</h1>

<% if Rails.env.development? %>
	<p>Sent to: <%= @recp %></p>
<% end %>

<hr />

<h2>To Review/Manage this Leave Request, please go to your <%= link_to "Dashboard", leave_requests_url %></h2>

<% if false #@deadline 
  %>
<p>
	<strong>Note:</strong>This request should be consulted by <%= format_date(@deadline) %>
</p>

<% end %>


<%= render partial: '/leave_requests/details_leave', :formats => [:html], locals: {leave: @leave} %>

