<% content_for :header_tags do %>
    <%= stylesheet_link_tag 'leaves_holidays', :plugin => 'redmine_leaves_holidays' %>
    <% heads_for_wiki_formatter %>
<% end %>

    <ul class="menu">
    <li>
    <h1><%= l(:leave_dashboard) %></h1>
    </li>
    <li>
        <% if LeavesHolidaysLogic.plugin_feedback_configured? %>
          <%= link_to l(:leave_feedback_title), leave_feedbacks_new_path, :remote => true, :class => "icon icon-email-add" %>
        <% end %>
    </li>
    </ul>

<div class="tabs">
  <ul>
  <% tabs.each do |tab| -%>
    <li><%= link_to l(tab[:label]), {:controller => tab[:controller], :action => tab[:action] },
                                    :id => "tab-#{tab[:controller]}",
                                    :class => (tab[:controller] != controller_name  ? nil : 'selected')
                                     %></li>
  <% end -%>
  </ul>
  <div class="tabs-buttons" style="display:none;">
    <button class="tab-left" type="button" onclick="moveTabLeft(this);"></button>
    <button class="tab-right" type="button" onclick="moveTabRight(this);"></button>
  </div>
</div>

<script>
  $(document).ready(displayTabsButtons);
  $(window).resize(displayTabsButtons);
</script>