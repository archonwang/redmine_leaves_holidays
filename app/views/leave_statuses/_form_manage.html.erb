
<h2>Approve or Reject the Leave Request <%= link_to "\##{leave.id}", leave_request_path(leave) %> from <%= link_to leave.user.name, user_path(leave.user) %>:</h2>

<div class="splitcontentleft">
<div class="box">

<p><%= leave.issue.subject %> from <%= format_date(leave.from_date) %> to <%= format_date(leave.to_date) %> (<%= leave.actual_leave_days %> days)</p>
<% unless leave.comments.empty? %>
	<p>
		User comments: <%= leave.comments %>
	</p>
<% end %>

<%= form_for [leave, status], :url => leave_request_leave_status_path do |f| %>



<hr/>
	<fieldset>
	<% if status.errors.any? %>
		<div class="flash">
			<ul>
		  		<% status.errors.full_messages.each do |msg| %>
		    		<li><%= msg %></li>
		  		<% end %>
			</ul>
		</div>
	<% end %>

	<div>
		<p>
			<%= f.radio_button :acceptance_status, 'accepted' %>
			<%= f.label :acceptance_status, 'Approve Leave Request', :value => 'accepted' %>
			<%= f.radio_button :acceptance_status, 'rejected' %>
			<%= f.label :acceptance_status, 'Reject Leave Request', :value => 'rejected' %>
		</p>

		<p>
			<label>Comments:</label>
			<%= f.text_field :comments, {:size => 75 } %>
		</p>
	</div>
	<%= f.submit 'Submit', data: { confirm: 'Are you sure?' } %> |
<% end %>

<a href="javascript:history.back()"><%= l(:button_back) %></a>
</fieldset>


</div></div>

	<div id="splitcontentright">
		<%= render partial: '/leave_requests/details_metrics', locals: {user: leave.user} %>
	</div>

<hr/>
<% if User.current.id != leave.user.id %>
	
	<% m_list = leave.manage_list %>

	<% if m_list.any? %>
	
	<br />
	<fieldset>
		<h3>Users able to manage this Leave Request:</h3>

		<% m_list.each do |project, nested_rules| %>
			<% users_role = project.users_by_role %>
			<p><strong><%= project.name %></strong></p>
			<% nested_rules.each do |nesting, rule_set| %>

				<% if nesting == 1 %>

					<li>Directly (level <%= nesting %>):

				<% elsif nesting == :leave_administrators %>

					<li>Project Leave Administrators:

				<% else %>

					<li>Indirectly (level <%= nesting %>):

				<% end %>

				<% rule_set.each do |rules| %>

					<%= rules[:users].map{|u| 
						roles = users_role.select{|k,v| u.id.in?(v.map(&:id))}.keys.map(&:name);
						str = "".html_safe;
						str += "<strong>You: ".html_safe if User.current == u;
						str += u.name.to_s.html_safe;
						str += " (#{roles.join(', ')})".html_safe if roles.any?;
						str += "</strong>".html_safe if User.current == u;
						str
					}.join(', ').html_safe %>

					<% if rules[:backups].any? %>
						(Backup: <%= rules[:backups].map(&:name).uniq.join(', ') %>)
					<% end %>

				<% end %>

				</li>
			<% end %>
			
			
		<% end %>

	</fieldset>
	<% end %>

	<% v_list = leave.vote_list_left %>
	<% if v_list.any? %>
	<br />
	<fieldset>
		<h3>Waiting for Consultation:</h3>
		<% v_list.each do |project, users| %>
		<% users_role = project.users_by_role %>
			<p><strong><%= project.name %>: </strong>
			<%= users.map{|u| 
						roles = users_role.select{|k,v| u.id.in?(v.map(&:id))}.keys.map(&:name);
						str = "".html_safe;
						str += "<strong>You: ".html_safe if User.current == u;
						str += u.name.to_s.html_safe;
						str += " (#{roles.join(', ')})".html_safe if roles.any?;
						str += "</strong>".html_safe if User.current == u;
						str
					}.join(', ').html_safe %>
			</p>
		<% end %>

	</fieldset>
	<% end %>
	<br />
	<fieldset>
	<h3>Users Consulted:</h3>
	
	<%= render partial: 'leave_votes/tab_votes', locals: {votes: votes, leave: leave} %>
	</fieldset>
<% end %>

